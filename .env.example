# Username to track
TURF_USERNAME=jugglewithtim

# Web server port
PORT=3000

# Poll intervals in milliseconds (be kind to the API)
FEED_POLL_MS=5000
STATS_POLL_MS=15000
LOCATION_POLL_MS=20000

# Optionally override the API base (normally leave as default)
API_BASE=https://api.turfgame.com/v5

# Show coordinates on stream (true/false)
SHOW_COORDS=false

# Map settings
SHOW_MAP=true
MAP_TILE_URL=https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png
MAP_ATTRIBUTION=&copy; OpenStreetMap contributors
MAP_ZOOM=14
ZONES_HALFSPAN=0.05
